{
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react",
    "lib": ["ES2020"],
    "module": "esnext",
    "resolveJsonModule": true,
    "target": "esnext",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": ["@types/node"]
  }
}
